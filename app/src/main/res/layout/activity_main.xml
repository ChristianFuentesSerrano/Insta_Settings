<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?android:attr/homeAsUpIndicator"
        android:background="@color/material_on_background_disabled"
        app:layout_constraintRight_toLeftOf="@id/textView"
        app:layout_constraintBottom_toTopOf="@id/Buscar"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ConfiguraciÃ³n"
        android:textSize="26sp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="5dp"
        app:layout_constraintLeft_toRightOf="@id/imageButton"
        app:layout_constraintBottom_toTopOf="@id/Buscar"
        />

    <EditText
        android:id="@+id/Buscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar"
        android:textSize="22sp"
        android:ems="10"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/Seguir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seguir e invitar amigos"
        android:textAlignment="textStart"
        android:layout_marginTop="@dimen/material_emphasis_medium"
        app:layout_constraintTop_toBottomOf="@id/Buscar"/>
    <Button
        android:id="@+id/Notificaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notificaciones"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/Seguir"/>
    <Button
        android:id="@+id/Privacidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacidad"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/Notificaciones"/>
    <Button
        android:id="@+id/Seguridad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seguiridad"
        android:textAlignment="textStart"

        app:layout_constraintTop_toBottomOf="@id/Privacidad"/>
    <Button
        android:id="@+id/Cuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuenta"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/Seguridad"/>
    <Button
        android:id="@+id/Ayuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/Cuenta"
        android:drawableLeft="" />
    <Button
        android:id="@+id/Informacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informacion"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/Ayuda"/>
    <Button
        android:id="@+id/Tema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tema"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/Informacion"/>

</androidx.constraintlayout.widget.ConstraintLayout>